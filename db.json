<!DOCTYPE html>
<html>
<body>
<h2>Магазин</h2>

<div id="products"></div>
<h3>Корзина:</h3>
<ul id="cart"></ul>

<script>
const products = [
  { id: 1, name: "Телефон", price: 500 },
  { id: 2, name: "Ноутбук", price: 1200 }
];

const cart = [];

function renderProducts() {
  const div = document.getElementById("products");
  products.forEach(p => {
    const btn = `<button onclick="addToCart(${p.id})">Купити</button>`;
    div.innerHTML += `<p>${p.name} — ${p.price}$ ${btn}</p>`;
  });
}

function addToCart(id) {
  const item = products.find(p => p.id === id);
  cart.push(item);
  renderCart();
}

function renderCart() {
  const ul = document.getElementById("cart");
  ul.innerHTML = "";
  cart.forEach(i => ul.innerHTML += `<li>${i.name} — ${i.price}$</li>`);
}

renderProducts();
</script>
</body>
</html>

